@if (User.Identity.IsAuthenticated)
{
    <a class="il-button" href="/">Home</a>
    <a class="il-button" asp-area="AzureAD" asp-controller="Account" asp-action="SignOut">Sign out</a>
}
else
{
    <a class="il-button" href="/">Home</a>
    <a class="il-button" asp-area="AzureAD" asp-controller="Account" asp-action="SignIn">Sign in</a>
}